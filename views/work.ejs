<%- include("partials/header.ejs") %>
    <main>
        <div class="box" id="heading">
            <h1>
                Work List
            </h1>

        </div>
        <div class="box">
            <form class="item" action="/work" method="post">
                <input type="text" name="newItem" placeholder="New Item">
                <button type="submit">âž¤</button>
            </form>

            <% workItems.forEach((workItems) => { %>
                <div class="item">
                    <form class="large" action="/deletework" method="post">
                    <input class="input" type="checkbox"  name="checked"  value="<%= workItems._id%>" onChange="this.form.submit()">
                    <label for="">
                        <p>
                            <%= workItems.name%>
                        </p>
                    </label>
                    </form>
                    <div class="small-time">
                        <% var days=['Sunday', 'Monday' , 'Tuesday' , 'Wednesday' , 'Thursday' , 'Friday' , 'Saturday' ]; %>
                        <% var monthNames=["January", "February" , "March" , "April" , "May" , "June" , "July" , "August"
                            , "September" , "October" , "November" , "December" ]; %>
                            <% var d=days[new Date().getDay()] %>
                                <% var m=monthNames[new Date().getMonth()] %>
                                    <% var t=new Date().getDate() %>
                                        <span>
                                            <%= t %>  <%= m %>
                                                    <%= new Date().getFullYear() %>
                                        <span>
                                        </div>
                </div>
           <% }); %>
                
            
        </div>

    </main>
    <%- include('partials/footer.ejs') %>